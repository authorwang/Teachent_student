<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.ant.nepu.teachent.fragment.HomeworkBaseFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:fastScrollEnabled="true"
            android:id="@+id/lv_frag_base_homework"
            android:layout_below="@+id/rl_frag_base_homework_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:padding="@dimen/fab_margin"
            android:id="@+id/rl_frag_base_homework_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_frag_homework_base_title"
                android:text="@string/fragment_ppt_base_title"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                style="@style/fragment_ppt_title"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/frag_ppt_btn_dl_selector"
                style="@style/fragment_ppt_button"
                android:id="@+id/btn_frag_homework_back"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="@string/fragment_ppt_button_text"
                />
        </RelativeLayout>


    </RelativeLayout>


</FrameLayout>
