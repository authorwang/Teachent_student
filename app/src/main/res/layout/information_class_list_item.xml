<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center"
    >


    <RelativeLayout
        android:id="@+id/rl_frag_information_arrow"
        android:layout_width="32dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/iv_frag_information_class_item_if_check"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:visibility="visible"
            app:srcCompat="@mipmap/icon_check" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_frag_information_class_class_id"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"

            android:textSize="24dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_frag_information_class_class_name"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/rl_frag_information_arrow"
        android:gravity="center_vertical"

        android:textSize="18dp" />


</RelativeLayout>