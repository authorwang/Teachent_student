<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        app:cardCornerRadius="5dp"
        app:elevation="1dp"
    android:id="@+id/cv_frag_leave_message"
    >

    <LinearLayout
        android:id="@+id/base_swipe_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_frag_leave_message_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/avatar_teacher_female"
            />

        <LinearLayout
            android:layout_width="228dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_frag_leave_message_name"
                android:layout_width="228dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="张三说："
                android:gravity="left|center_vertical"
                android:textSize="18sp" />

            <!--留言详情不超过20字-->
            <TextView
                android:id="@+id/tv_frag_leave_message_text"
                android:layout_width="228dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="高数02班今天的第五道习题涉及到了洛必达法则，..."
                android:gravity="left|center_vertical"
                android:textSize="18sp" />
        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>


