<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.ant.nepu.teachent.fragment.LeaveMessageDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_frag_leave_message_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin">

            <TextView
                android:id="@+id/tv_frag_leave_message_comment"
                style="@style/fragment_ppt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/fragment_leave_message_detail_title" />

            <Button
                android:id="@+id/btn_frag_leave_message_detail_close"
                style="@style/fragment_ppt_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/frag_ppt_btn_dl_selector"
                android:text="@string/fragment_leave_message_detail_close_button_text" />
        </RelativeLayout>


 <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_frag_leave_message_detail"
                android:layout_width="match_parent"
                android:layout_marginTop="70dp"
                android:layout_height="170dp"
                app:cardCornerRadius="5dp"
                app:elevation="1dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_frag_leave_message_detail_text"
                        android:text="留言者说：留言详情正文"
                        android:textSize="18sp"
                        android:layout_marginStart="15dp"

                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_frag_leave_message_detail_comment"
            android:layout_width="match_parent"
            android:layout_marginTop="250dp"
            android:layout_height="170dp"
            app:cardCornerRadius="5dp"
            app:elevation="1dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_frag_leave_message_detail_comment"
                    android:text="评论者说：评论内容正文"
                    android:textSize="18sp"
                    android:layout_marginStart="15dp"

                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">


            <RelativeLayout
                android:id="@+id/rl_frag_leave_message_detail_comment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="0dp"
                >

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:enabled="true"	android:gravity="top"	android:inputType="textMultiLine"	android:minLines="8"	android:maxLines="10"	android:scrollbars="vertical" 	android:background="@android:drawable/edit_text"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toStartOf="@+id/btn_frag_leave_message_detail_comment" />

                <Button
                    android:id="@+id/btn_frag_leave_message_detail_comment"
                    style="@style/fragment_ppt_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/frag_ppt_btn_dl_selector"
                    android:text="@string/fragment_leave_message_detail_comment_button_text" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>